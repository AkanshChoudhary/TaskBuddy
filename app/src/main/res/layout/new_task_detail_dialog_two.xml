<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainDarkGreen"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/mainLightGreen"
                android:textSize="30sp"
                android:text="New Task! "
                android:fontFamily="@font/bangers"
                />

            <EditText
                android:textColor="@color/mainLightGreen"
                android:id="@+id/newTaskName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/mainLightGreen"
                android:hint="Task Name"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:gravity="left"
                android:paddingLeft="17dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <EditText
                android:textColor="@color/mainLightGreen"
                android:id="@+id/newTaskDesc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:gravity="start"
                android:textColorHint="@color/mainLightGreen"
                android:hint="Task Description"
                android:padding="10dp"
                android:paddingLeft="17dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <EditText
                android:textColor="@color/mainLightGreen"
                android:id="@+id/newTaskAssign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:gravity="start"
                android:textColorHint="@color/mainLightGreen"
                android:hint="Assign Task To.."
                android:padding="10dp"
                android:paddingLeft="17dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:textColor="@color/mainLightGreen"
                android:id="@+id/datePicker2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:textColorHint="@color/mainLightGreen"
                android:hint="Select Due Date"
                android:padding="10dp"
                android:paddingLeft="17dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/cancel2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/mainLightGreen"
                    android:textColor="@color/mainDarkGreen"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/saveNewDetail2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:text="Save"
                    android:backgroundTint="@color/mainLightGreen"
                    android:textAllCaps="false"
                    android:textColor="@color/mainDarkGreen"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>