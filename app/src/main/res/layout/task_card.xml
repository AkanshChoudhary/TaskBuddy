<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#071a52">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/taskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a7ff83"
                android:text="Sample Task Name"
                android:layout_alignParentStart="true"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/assignedTo"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned to: Akansh"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"/>


        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/taskDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#a7ff83"
            android:text="Sample Task Desc"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/taskStatusDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Status: Ui part is done"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/dueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_gravity="end"
            android:background="@drawable/edit_text_background"
            android:padding="15dp"
            android:text="Due: 24/07/2020"
            android:textSize="20sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>